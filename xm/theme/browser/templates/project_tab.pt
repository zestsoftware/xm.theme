<li id=""
    class=""
    tal:condition="view/one_item"
    tal:attributes="id string:portaltab-${view/title};
                    class view/tab_class;">
  <a href=""
     tal:attributes="href view/url;"
     tal:content="view/title" />
</li>

<li id=""
    class=""
    tal:condition="view/more_items"
    tal:attributes="id string:portaltab-${view/title};
                    class string:${view/tab_class} tab-submenu hide-tab-submenu;">

  <a href=""
     tal:attributes="href view/url;">
    <span tal:replace="view/title" />
    <span class="arrowDownAlternative">&#9660;</span>
  </a>
  <ul>
    <tal:actions repeat="item view/items">
      <li id=""
          class=""
          tal:attributes="id string:portaltab-${view/title}-${item/id};
                          class item/tab_class;">
        <a href=""
           tal:attributes="href item/url;"
           tal:content="item/title">
        </a>
      </li>
    </tal:actions>
  </ul>
</li>
