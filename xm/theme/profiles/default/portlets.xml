<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone">

  <!-- Purge default plone portlets -->

  <assignment
      manager="plone.leftcolumn"
      category="context"
      key="/"
      name="navigation"
      purge="True"
      />

   <assignment
      manager="plone.rightcolumn"
      category="context"
      key="/"
      name="review"
      purge="True"
      />

  <assignment
      manager="plone.rightcolumn"
      category="context"
      key="/"
      name="news"
      purge="True"
      />

  <assignment
      manager="plone.rightcolumn"
      category="context"
      key="/"
      name="events"
      purge="True"
      />

  <assignment
      manager="plone.rightcolumn"
      category="context"
      key="/"
      name="calendar"
      purge="True"
      />  

  <!-- Setup XM Theme assignments -->
  
  <assignment
    type="portlets.Classic"
    manager="plone.leftcolumn"
    category="context"
    key="/"
    name="stories.portlet"
    insert-before="*"
    >
    <property name="template">portlet_stories</property>
    <property name="macro">portlet</property>
  </assignment>

  <assignment
    type="portlets.Classic"
    manager="plone.leftcolumn"
    category="context"
    key="/"
    name="tasks.portlet"
    insert-before="*"
    >
    <property name="template">portlet_tasks</property>
    <property name="macro">portlet</property>
  </assignment>    

  <assignment
    type="portlets.Classic"
    manager="plone.leftcolumn"
    category="context"
    key="/"
    name="poi.portlet"
    insert-before="*"
    >
    <property name="template">portlet_poi</property>
    <property name="macro">portlet</property>
  </assignment>

  <assignment
    type="xm.portlets.project"
    manager="plone.leftcolumn"
    category="context"
    key="/"
    name="project.portlet"
    insert-before="*"
    >
  </assignment>

  <assignment
    type="portlets.Login"
    manager="plone.leftcolumn"
    category="context"
    key="/"
    name="login.portlet"
    insert-before="*"
    >
  </assignment>
  
</portlets>